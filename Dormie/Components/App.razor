    <!-- Your JS -->
    <script src="js/site.js"></script>

    <!-- Carousel Helper -->
    <script>
        window.carouselHelper = {
            next: function (id) {
                var carousel = bootstrap.Carousel.getOrCreateInstance(document.getElementById(id));
                carousel.next();
            },
            prev: function (id) {
                var carousel = bootstrap.Carousel.getOrCreateInstance(document.getElementById(id));
                carousel.prev();
            }
        };
    </script>

</body>
</html>