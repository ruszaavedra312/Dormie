@page "/createuser"

<div class="text-center my-2">
    <h3>Be part of our growing family</h3>
</div>
<div class="container d-flex justify-content-center align-items-center min-vh-70">
    <form class="card p-4 rounded-4 shadow-sm" style="width: 80%;">
        <div class="my-4 text-center">
            <h3>
                Be part of Dormie
            </h3>
        </div>
        <div class="row justify-content-between">
            <div class="col-xl-6 col-12">
                <label class="form-label" for="first-name">First Name</label>
                <input class="form-control" type="text" id="first-name"/>
            </div>
            <div class="col-xl-6 col-12">
                <label class="form-label" for="last-name">Last Name</label>
                <input class="form-control" type="text" id="last-name" />
            </div>
            <div class="col-xl-6 col-12">
                <label class="form-label" for="contactnumber">Contact No.</label>
                <input class="form-control" type="number" id="contactnumber"/>
            </div>
            <div class="col-xl-6 col-12">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" />
            </div>
            <div class="col-6 d-flex flex-row gap-4 input-group my-2">
                <div class="">
                    @* <input class="form-check-input mt-0" type="radio" value="Renter" id="renter" name="usertype" aria-label=""> *@
                    <input type="radio" value="Renter" id="renter" name="usertype" aria-label="">
                    <label for="renter">Renter</label>
                </div>
                <div class="">
                    <input type="radio" value="Owner" id="owner" name="usertype" aria-label="">
                    <label for="owner">Owner</label>
                </div>
            </div>
            <div class="col-xl-6 col-12">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" />
            </div>
            <div class="col-xl-6 col-12">
                <label class="form-label" for="confirm-password">Confirm Password</label>
                <input class="form-control" type="password" id="confirm-password" />
            </div>
            <div class="col-12 my-3">
                <input type="checkbox" value="termsandcondition" id="terms" name="terms" aria-label="">
                <label for=""> I agree to the
                    <a href="#">Terms and Conditions</a> of <strong>Dormie</strong>
                </label>
            </div>
        </div>
        
    </form>
</div>

